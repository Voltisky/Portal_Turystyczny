<div class="col s8 ">
    <div class="details-content-info">
        <div class="details-content-hits chip hoverable">
            <i class="material-icons" style="vertical-align:middle;">visibility</i> {{ "frontend.details.hits_number"|trans }}: {{ detailsItem.hits|default('0') }}
        </div>
        <div class="details-content-created chip hoverable right">
            <i class="material-icons" style="vertical-align:middle;">date_range</i> {{ "frontend.poi.created_at"|trans }}: {{ detailsItem.createdAt|date("d-m-Y") }}
        </div>
        <div class="details-content-autor chip hoverable right">
            <i class="material-icons" style="vertical-align:middle;">account_circle</i> {{ "frontend.poi.autor"|trans }}: {{ detailsItem.user }}
        </div>
    </div>
    <div class="details-content-description">
        {{ detailsItem.opis|striptags }}
    </div>
</div>