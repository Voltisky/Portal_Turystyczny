<div class="mdl-cell mdl-card mdl-shadow--4dp portal-card">
    <div class="mdl-card__media">
        {% if item.poiMedia|length > 0 %}
            <img class="article-image" src="{% path item.poiMedia[0].media, 'big' %}" border="0" alt="">
        {% else %}
            <img class="article-image" src="{% path konfiguracja.defaultImage, 'big' %}" border="0" alt="">
        {% endif %}
    </div>
    <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">{{item.nazwa}}</h2>
    </div>
    {% if item.adres %}
        <div class="mdl-card__supporting-text">
            {{item.adres}}
        </div>
    {% endif %}
    <div class="mdl-card__supporting-text">
        {{item.polozenie|striptags|truncate(255)}}
    </div>
    
    <div class="mdl-card__supporting-text">
        {{item.updatedAt|date('d-m-Y')}}
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-button--accent" href="portal-example01.html">{{"frontend.poi.read_more"|trans}}</a>
    </div>
</div>